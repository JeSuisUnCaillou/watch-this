<% playlist ||= nil %>

<% if playlist %>
    <div class="card">
        <div class="card-block">
            <%= link_to "https://www.youtube.com/playlist?list=" + playlist.id, target: :blank do %>
                <%= image_tag playlist.thumbnail_url, class: "card-img-top", alt: "playlist's thumbnail" %>
            <% end %>
            <h4 class="card-title p-2"><%= playlist.title %></h4>
            <p class="card-text p-2">
                <%= playlist.description %><br />
                <small><%= playlist.published_at.to_formatted_s(:short) %></small>
            </p>
        </div>
    </div>
    
<% end %>